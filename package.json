{
  "name": "droni-react",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --port 3000",
    "start": "cross-env NODE_ENV=development vite --port 3000",
    "build": "vite build && tsc",
    "serve": "vite preview",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "cap:sync:dev": "pnpm build && cross-env NODE_ENV=development pnpm cap sync",
    "docker:build": "dotenv -e .env -- sh -c 'docker build --build-arg VITE_BACKEND_URL_ARG=\"$VITE_BACKEND_URL\" --build-arg VITE_NAVER_CLIENT_ID_ARG=\"$VITE_NAVER_CLIENT_ID\" --build-arg VITE_NAVER_REDIRECT_URI_ARG=\"$VITE_NAVER_REDIRECT_URI\" -t droni-react .'",
    "docker:run": "docker run -d -p 8080:8080 --name droni-react droni-react",
    "docker:stop": "docker stop droni-react && docker rm droni-react",
    "docker:test": "npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "@capacitor/android": "^7.3.0",
    "@capacitor/core": "^7.3.0",
    "@capacitor/ios": "^7.3.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-form": "^1.12.3",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-router": "^1.121.21",
    "@tanstack/react-router-devtools": "^1.121.21",
    "@tanstack/react-store": "^0.7.1",
    "@tanstack/router-core": "^1.121.21",
    "@tanstack/router-plugin": "^1.121.22",
    "@tanstack/store": "^0.7.1",
    "axios": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@capacitor/cli": "^7.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "web-vitals": "^5.0.3"
  }
}
